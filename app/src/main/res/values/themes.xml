<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HabitTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
    </style>

    <style name="Theme.HabitTracker" parent="Base.Theme.HabitTracker" />

    <!-- Appbar Text style -->

    <style name="AppbarTextStyle">
        <item name="fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <!-- Title style-->
    <style name="Title">
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Text style -->
    <style name="Text">
        <item name ="fontFamily">@font/lexend_regular</item>
        <item name ="android:textColor">@color/onSecondary</item>
    </style>
</resources>